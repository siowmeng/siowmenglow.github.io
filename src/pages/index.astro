---
import BaseLayout from "../layouts/BaseLayout.astro";

const name = "Siow Meng Low";
const tagline = "ML researcher — safe RL with feedback; exploring RL × LLMs";
const email = "siowmeng@siowmenglow.com";
const location = "Singapore (GMT+8)";
const authorization = "Eligible to work in Singapore."

const links = [
  { label: "Google Scholar", href: "https://scholar.google.com/citations?user=3lRmrq8AAAAJ&hl=en&oi=ao" },
  { label: "Semantic Scholar", href: "https://www.semanticscholar.org/author/Siow-Meng-Low/2159712260" },
  { label: "GitHub", href: "https://github.com/siowmeng" },
  { label: "LinkedIn", href: "https://sg.linkedin.com/in/siowmeng" },
  { label: "X", href: "https://x.com/siowmenglow" },
];

const highlights = [
  {
    title: "TraCeS (Under review; earlier ICLR’25 Alignment workshop)",
    desc: "Turns rollout-level safety labels into per-step safety signals, enabling agents to learn safer behavior without hand-designed safety costs. (Think: learning an internal \"safety meter\" from sparse pass/fail feedback.",
  },
/*  {
    title: "Safe RL with learned non-Markovian constraints (arXiv 2024)",
    desc: "Models safety as history-dependent constraints and learns them from data, enabling safe RL when Markovian cost shaping is insufficient.",
  },*/
  {
    title: "Safe MDP planning via temporal patterns of unsafe trajectories (ICAPS 2023)",
    desc: "Learns temporal patterns of undesirable behavior and uses them to steer planning away from negative side effects.",
  },
  {
    title: "ILBO (AAAI 2022)",
    desc: "Introduces a sample-efficient iterative lower-bound optimization approach for learning deep reactive policies in continuous control/planning settings.",
  }
];
---
<BaseLayout title={name} description={`${tagline}.`}>
  <main class="wrap">
    <header class="top">
      <img class="avatar" src="/headshot.jpg" alt="Portrait of Siow Meng Low" />
      <div>
        <h1>{name}</h1>
        <p class="tag">{tagline}</p>
        <p class="meta">{location} · {authorization}  · <a href={`mailto:${email}`}>{email}</a></p>

        <nav class="links">
          {links.map((l) => <a href={l.href} target="_blank" rel="noopener noreferrer">{l.label}</a>)}
          <a href="/publications">Publications</a>
          <a href="/cv">CV</a>
        </nav>
      </div>
    </header>

    <section>
      <h2>About</h2>
      <p>
        I’m an ML researcher based in Singapore. I recently completed a PhD in Computer Science at SMU and currently teach
        undergraduate CS as an adjunct lecturer while exploring research roles.
      </p>
      <p>
        My work focuses safe reinforcement learning from feedback, particularly when safety constraints are implicit, history-dependent, or only available through sparse trajectory-level labels. Lately I’m also exploring the RL × LLM interface for safety and alignment.
        <!--My work focuses on safety in reinforcement learning—especially learning from sparse, high-level feedback (e.g., pass/fail
        safety labels) when explicit cost functions are unavailable.-->
      </p>
    </section>

    <section>
      <h2>Research highlights</h2>
      <ul class="cards">
        {highlights.map((h) => (
          <li class="card">
            <div class="cardTitle">{h.title}</div>
            <div class="cardDesc">{h.desc}</div>
          </li>
        ))}
      </ul>
    </section>

    <footer class="foot">
      <span>© {new Date().getFullYear()} {name}</span>
    </footer>
  </main>

  <style>
    .wrap{max-width:900px;margin:0 auto;padding:40px 18px;font-family:ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial;}
    .top{display:flex;gap:18px;align-items:center;margin-bottom:26px}
    .avatar{width:92px;height:92px;border-radius:18px;object-fit:cover}
    h1{margin:0;font-size:34px;letter-spacing:-0.02em}
    .tag{margin:6px 0 4px;font-size:16px;opacity:.85}
    .meta{margin:0;opacity:.75}
    .links{margin-top:10px;display:flex;gap:12px;flex-wrap:wrap}
    a{color:inherit;text-decoration:underline;text-underline-offset:3px}
    h2{margin:26px 0 10px;font-size:16px;letter-spacing:.02em;text-transform:uppercase;opacity:.8}
    .cards{list-style:none;padding:0;margin:0;display:grid;gap:10px}
    .card{border:1px solid rgba(0,0,0,.12);border-radius:14px;padding:14px 14px}
    .cardTitle{font-weight:650;margin-bottom:6px}
    .cardDesc{opacity:.85;line-height:1.45}
    .foot{margin-top:30px;opacity:.6;font-size:13px}
    @media (prefers-color-scheme: dark){
      body{background:#0b0c0f;color:#e9eef7}
      .card{border-color:rgba(255,255,255,.12)}
    }
  </style>
</BaseLayout>
